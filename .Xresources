URxvt.scrollBar:	off
URxvt*font:		xft:DejaVu Sans Mono:style=Book:size=12:antialias=true:hinting=true
URxvt*boldFont:		xft:DejaVu Sans Mono:style=Bold:size=12:antialias=true:hinting=true
URxvt*italicFont:	xft:DejaVu Sans Mono:style=Oblique:size=12:antialias=true:hinting=true
URxvt*boldItalicFont:	xft:DejaVu Sans Mono:style=Bold Oblique:size=12:antialias=true:hinting=true
URxvt*letterSpace:	                             -1
URxvt*hold:		off
URxvt*borderless:	true
URxvt*loginShell:	true
URxvt*urgentOnBell: 	true

URxvt*perl-ext-common:  default,url-select,clipboard
URxvt*url-select.launcher: /run/current-system/sw/bin/xdg-open
URxvt*url-select.underline: true
URxvt*url-select.button: 1
URxvt*keysym.M-u:	perl:url-select:select_next
URxvt*clipboard*autocopy: true
URxvt*keysym.Shift-Delete: perl:clipboard:copy
URxvt*keysym.Shift-Insert: perl:clipboard:paste

! to match gnome-terminal "Linux console" scheme
! foreground/background
URxvt*background: #000000
URxvt*foreground: #ffffff
! black
URxvt.color0  : #000000
URxvt.color8  : #555555
! red
URxvt.color1  : #AA0000
URxvt.color9  : #FF5555
! green
URxvt.color2  : #00AA00
URxvt.color10 : #55FF55
! yellow
URxvt.color3  : #AA5500
URxvt.color11 : #FFFF55
! blue
URxvt.color4  : #0000AA
URxvt.color12 : #5555FF
! magenta
URxvt.color5  : #AA00AA
URxvt.color13 : #FF55FF
! cyan
URxvt.color6  : #00AAAA
URxvt.color14 : #55FFFF
! white
URxvt.color7  : #AAAAAA
URxvt.color15 : #FFFFFF
